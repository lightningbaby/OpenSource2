<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/list_item"
                android:padding="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/today_image_view"

        android:padding="2dp"
        android:textSize="24dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        tools:text="永不"/>
    <TextView
        android:id="@+id/abstract_text_view"
        android:maxLines="2"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text_view"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"

        android:padding="1dp"
        />

    <TextView
        android:id="@+id/comment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"

        android:textSize="16dp"
        android:layout_below="@id/abstract_text_view"
        android:layout_alignParentRight="true"
        tools:text="评论"
        />

    <ImageView
        android:id="@+id/today_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="5dp"
        app:srcCompat="@drawable/today"
        android:layout_alignTop="@+id/title_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_text_view"
        tools:text="发布时间"
        android:textSize="16dp"
        android:layout_alignBaseline="@+id/author_text_view"
        android:layout_alignBottom="@+id/author_text_view"
        android:layout_toRightOf="@+id/author_text_view"
        android:layout_toEndOf="@+id/author_text_view"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_comment"
        android:layout_below="@+id/abstract_text_view"
        android:layout_toLeftOf="@+id/comment_text_view"
        android:layout_toStartOf="@+id/comment_text_view"/>

    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textSize="16dp"
        tools:text="发布者"
        android:layout_alignBottom="@+id/comment_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_height="1px"
        android:background="@color/gray_line"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_below="@id/author_text_view"/>
</RelativeLayout>