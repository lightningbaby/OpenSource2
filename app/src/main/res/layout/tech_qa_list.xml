<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/author_portrait_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        app:srcCompat="@drawable/today"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_toRightOf="@id/author_portrait_image_view">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/author_portrait_image_view"
            android:padding="2dp"
            android:textSize="36sp"
            android:layout_marginTop="3dp"
            tools:text="test "/>

        <TextView
            android:id="@+id/tech_qa_body_text_view"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text_view"
            android:padding="1dp"
            android:textSize="8dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/author_text_view"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                tools:text="发布者"
                android:layout_below="@id/tech_qa_body_text_view"
                />

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/date_text_view"
                tools:text="发布时间"
                android:textSize="18dp"
                android:layout_toRightOf="@id/author_text_view"
                android:layout_below="@id/tech_qa_body_text_view"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_comment"

                android:id="@+id/imageView"
                android:layout_weight="0.05"/>

            <TextView
                android:id="@+id/comment_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18dp"
                android:layout_below="@id/tech_qa_body_text_view"
                android:layout_alignParentRight="true"
                tools:text="评论"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>